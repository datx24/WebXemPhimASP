@model MovieWeb.Models.Comment_64130299

@{
    ViewBag.Title = "Chi Tiết Bình Luận";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto my-8 p-6 bg-gray-100 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Chi Tiết Bình Luận</h2>
    <div class="bg-white p-6 rounded-lg shadow-md max-w-4xl mx-auto">
        <!-- Centering the inner content -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Ngày Tạo</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Tên Người Dùng</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.User_64130299.Username)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Nội Dung Bình Luận</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.Content)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Email Người Dùng</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.User_64130299.Email)</p>
            </div>
        </div>
        <hr class="my-6 border-gray-300" />
        <div class="flex justify-center">
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition-transform transform hover:scale-105" })
        </div>
    </div>
</div>