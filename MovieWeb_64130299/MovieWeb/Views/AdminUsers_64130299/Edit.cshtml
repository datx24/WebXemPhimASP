@model MovieWeb.Models.AdminUsers_64130299

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto py-8" role="form">
    <h2 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Chỉnh sửa thông tin</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="max-w-md mx-auto space-y-6 bg-white p-8 rounded-lg shadow-lg border border-gray-300">
    <h4 class="text-2xl font-semibold text-gray-700 mb-4 text-center">Thông tin chi tiết</h4>
    <hr class="border-t-2 border-gray-200 mb-6" />

    @Html.ValidationSummary(true, "", new { @class = "text-red-500 text-sm mb-4" })

    @Html.HiddenFor(model => model.Id)

    <!-- Dropdown chọn vai trò -->
    <div class="mb-4">
        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "block text-sm font-medium text-gray-600" })
        <div class="mt-1">
            @Html.DropDownListFor(model => model.Role, new SelectList(new[] { "Quản lý", "Nhân viên" }), new { @class = "form-select block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500" })
            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-red-500 text-sm mt-1" })
        </div>
    </div>

    <!-- Username Field -->
    <div class="mb-4">
        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "block text-sm font-medium text-gray-600" })
        <div class="mt-1">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-input block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-red-500 text-sm mt-1" })
        </div>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
        @Html.LabelFor(model => model.PasswordHash, htmlAttributes: new { @class = "block text-sm font-medium text-gray-600" })
        <div class="mt-1">
            @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-input block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500" } })
            @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-red-500 text-sm mt-1" })
        </div>
    </div>

    <!-- Nút Gửi -->
    <div class="mt-6 flex justify-between">
        <input type="submit" value="Lưu" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200" />
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "text-indigo-600 hover:text-indigo-800 font-semibold" })
    </div>

</div>
    }
</div>
