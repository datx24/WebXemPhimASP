@model MovieWeb.Models.WatchHistory_64130299

@{
    ViewBag.Title = "Xóa Lịch Sử Xem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto my-8 p-6 bg-gray-100 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Xóa Lịch Sử Xem</h2>
    <h3 class="text-lg text-center text-gray-700 mb-4">Bạn có chắc chắn muốn xóa mục này không?</h3>
    <div class="bg-white p-6 rounded-lg shadow-md max-w-3xl mx-auto">
        <!-- Centering the inner content -->
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Thông Tin Lịch Sử Xem</h4>
        <hr class="mb-4" />
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">@Html.DisplayNameFor(model => model.LastWatchedTime)</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.LastWatchedTime)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">@Html.DisplayNameFor(model => model.CreatedAt)</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">@Html.DisplayNameFor(model => model.Movie_64130299.Title)</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.Movie_64130299.Title)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">@Html.DisplayNameFor(model => model.User_64130299.Email)</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.User_64130299.Email)</p>
            </div>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-6 flex justify-between">
                <input type="submit" value="Xóa" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md shadow-md transition-transform transform hover:scale-105" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "text-blue-600 hover:text-blue-700 text-lg font-medium" })
            </div>
        }
    </div>
</div>