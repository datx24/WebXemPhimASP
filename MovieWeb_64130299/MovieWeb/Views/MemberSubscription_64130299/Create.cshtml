@model MovieWeb.Models.MemberSubscription_64130299

@{
    Layout = "~/Views/Shared/_Layout641302999.cshtml";
}
<!-- Hiển thị thông báo lỗi nếu có lỗi -->
@if (ViewData["ErrorMessage"] != null)
{
    <div class="text-red-600 text-sm text-center mt-4">
        @ViewData["ErrorMessage"]
    </div>
}

else
{
    <div class="max-w-4xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Tạo Thẻ Thành Viên</h2>

        @using (Html.BeginForm("Create", "MemberSubscription_64130299", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="space-y-4">
                <!-- Ẩn UserId -->
                @Html.HiddenFor(model => model.UserId)

                <!-- Chọn User -->
                <div>
                    @Html.Label("Người đăng ký", new { @class = "block text-sm font-medium text-gray-700" })
                    @Html.TextBoxFor(
                        model => model.User_64130299.Username,
                        new { @Value = Session["UserName"], @readonly = "readonly", @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-4 py-2 text-black" }
                    )
                </div>

                <!-- Chọn Gói -->
                <div>
                    @Html.Label("Gói thành viên", new { @class = "block text-sm font-medium text-gray-700" })
                    @Html.DropDownListFor(
                        model => model.PlanId,
                        (SelectList)ViewBag.PlanId,
                        "Chọn Gói",
                        new
                            {
                                @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-4 py-2 text-black"
                            }
                    )
                </div>

                <!-- Phương thức thanh toán -->
                <div>
                    @Html.Label("Phương thức thanh toán", new { @class = "block text-sm font-medium text-gray-700" })
                    @Html.DropDownListFor(
                        model => model.PaymentMethod,
                        new SelectList(new List<string> { "VNPay", "Momo" }),
                        "Chọn Phương Thức Thanh Toán",
                        new { @class = "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm px-4 py-2 text-black" }
                    )
                </div>

                <!-- Submit -->
                <div class="text-center">
                    <input type="submit" value="Đăng Ký" class="mt-4 inline-block px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-md shadow-md cursor-pointer" />
                </div>
            </div>
        }
    </div>

}
