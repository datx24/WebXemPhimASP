@model MovieWeb.Models.MemberSubscription_64130299

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-4xl mx-auto mt-8 p-6 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4 text-center">Xóa Đăng Ký Thành Viên</h2>

    <h3 class="text-xl font-medium text-red-600 mb-6  text-center">Bạn có chắc chắn muốn xóa đăng ký này?</h3>

    <div class="mb-6">
        <h4 class="text-lg font-bold text-gray-900 mb-2 text-center">Chi tiết Đăng Ký Thành Viên</h4>
        <hr class="border-gray-300 mb-4" />
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-gray-700">
            <div>
                <dt class="font-semibold text-gray-600">Ngày Bắt Đầu</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.StartDate)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Ngày Hết Hạn</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.ExpiryDate)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Cấp Độ Quyền Truy Cập</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.AccessLevel)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Trạng Thái</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.Status)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Ngày Gia Hạn</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.RenewalDate)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Ngày Tạo</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Ngày Cập Nhật</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Phương Thức Thanh Toán</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.PaymentMethod)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Số Tiền Đã Thanh Toán</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.AmountPaid)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Email Người Dùng</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.User_64130299.Email)</dd>
            </div>
            <div>
                <dt class="font-semibold text-gray-600">Gói Đăng Ký</dt>
                <dd class="mt-1">@Html.DisplayFor(model => model.SubscriptionPlans_64130299.PlanName)</dd>
            </div>
        </dl>
    </div>

    <div class="flex justify-center space-x-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="px-6 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">Xóa</button>
        }

        <a href="@Url.Action("Index")" class="px-6 py-2 bg-gray-200 text-gray-800 font-semibold rounded-lg hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">Quay lại danh sách</a>
    </div>
</div>
