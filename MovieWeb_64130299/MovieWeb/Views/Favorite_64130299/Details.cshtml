@model MovieWeb.Models.Favorite_64130299

@{
    ViewBag.Title = "Chi Tiết Yêu Thích";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto my-8 p-6 bg-gray-100 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Chi Tiết Yêu Thích</h2>
    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Ngày Tạo</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Tên Phim</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.Movie_64130299.Title)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Email Người Dùng</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.User_64130299.Email)</p>
            </div>
            <div class="flex flex-col">
                <p class="text-lg font-medium text-gray-700">Tên Người Dùng</p>
                <p class="text-xl font-semibold text-gray-900">@Html.DisplayFor(model => model.User_64130299.Username)</p>
            </div>
        </div>
        <hr class="my-6 border-gray-300" />
        <div class="flex justify-between">
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-blue-600 hover:text-blue-700 text-lg font-medium" })
        </div>
    </div>
</div>