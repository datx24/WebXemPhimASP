@model MovieWeb.Models.SubscriptionPlans_64130299

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Thông Tin Kế Hoạch Đăng Ký</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="bg-white p-8 rounded-lg shadow-lg max-w-3xl mx-auto space-y-8">
    <h4 class="text-xl font-semibold text-center text-gray-800 mb-6">Thông Tin Kế Hoạch Đăng Ký</h4>
    <hr class="border-gray-300 mb-6" />

    @Html.ValidationSummary(true, "", new { @class = "text-red-600 mb-4" })

    <!-- Hiển thị các thông tin người dùng có thể chỉnh sửa -->
    <div>
        @Html.LabelFor(model => model.PlanName, "Tên Kế Hoạch", htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
        <div class="mt-1">
            @Html.EditorFor(model => model.PlanName, new { htmlAttributes = new { @class = "form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
            @Html.ValidationMessageFor(model => model.PlanName, "", new { @class = "text-red-600 mt-1" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.DurationMonths, "Thời Gian (Tháng)", htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
        <div class="mt-1">
            @Html.EditorFor(model => model.DurationMonths, new { htmlAttributes = new { @class = "form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", type = "number", min = "1", required = "true" } })
            @Html.ValidationMessageFor(model => model.DurationMonths, "", new { @class = "text-red-600 mt-1" })
        </div>
    </div>

    <div>
        @Html.LabelFor(model => model.Price, "Giá (VND)", htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
        <div class="mt-1">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", type = "number", min = "0", step = "0.01", required = "true" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-red-600 mt-1" })
        </div>
    </div>

    <!-- Hiển thị các thông tin không cho phép chỉnh sửa -->
    <div>
        @Html.LabelFor(model => model.CreatedAt, "Created At", new { @class = "block text-gray-700 font-medium mb-2" })
        @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "w-full p-3 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-red-500 text-sm mt-1" })
    </div>

    <div>
        @Html.LabelFor(model => model.UpdatedAt, "Updated At", new { @class = "block text-gray-700 font-medium mb-2" })
        @Html.EditorFor(model => model.UpdatedAt, new { htmlAttributes = new { @class = "w-full p-3 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.UpdatedAt, "", new { @class = "text-red-500 text-sm mt-1" })
    </div>

    <!-- Submit Button và Back Link -->
    <div class="flex justify-between items-center mt-8">
        <input type="submit" value="Tạo Kế Hoạch" class="bg-blue-600 text-white hover:bg-blue-700 py-2 px-6 rounded-lg transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <div>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-blue-600 hover:text-blue-700 text-lg font-medium" })
        </div>
    </div>
</div>
}
