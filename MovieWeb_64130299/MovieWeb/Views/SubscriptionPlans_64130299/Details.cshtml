@model MovieWeb.Models.SubscriptionPlans_64130299

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto my-8 p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Chi Tiết Kế Hoạch Đăng Ký</h2>

    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
        <h4 class="text-xl font-semibold text-center text-gray-800 mb-6">Thông Tin Kế Hoạch Đăng Ký</h4>
        <hr class="border-gray-300 mb-6" />

        <dl class="space-y-6">
            <!-- Tên kế hoạch -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-medium text-gray-700">Tên Kế Hoạch:</dt>
                <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.PlanName)</dd>
            </div>

            <!-- Thời gian (tháng) -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-medium text-gray-700">Thời Gian (Tháng):</dt>
                <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.DurationMonths)</dd>
            </div>

            <!-- Giá -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-medium text-gray-700">Giá:</dt>
                <dd class="text-gray-700">@String.Format("{0:N0} VND", Model.Price)</dd>
            </div>

            <!-- Ngày tạo -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-medium text-gray-700">Ngày Tạo:</dt>
                <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </div>

            <!-- Ngày cập nhật -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-medium text-gray-700">Ngày Cập Nhật:</dt>
                <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            </div>
        </dl>
    </div>

    <!-- Các liên kết để chỉnh sửa hoặc quay lại -->
    <div class="mt-6 text-center">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.PlanId }, new { @class = "text-blue-600 hover:text-blue-800 font-medium text-lg" }) |
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "text-blue-600 hover:text-blue-800 font-medium text-lg" })
    </div>
</div>
