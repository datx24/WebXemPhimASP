@model MovieWeb.Models.SubscriptionPlans_64130299

@{
    ViewBag.Title = "Xóa Kế Hoạch Đăng Ký";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-8 mt-10">
    <!-- Tiêu đề trang -->
    <h2 class="text-4xl font-bold text-center text-gray-900 mb-6">Xóa Kế Hoạch Đăng Ký</h2>

    <!-- Câu hỏi xác nhận -->
    <h3 class="text-2xl text-center text-gray-700 mb-8">Bạn có chắc chắn muốn xóa kế hoạch này không?</h3>

    <!-- Thông tin kế hoạch -->
    <div class="bg-gray-50 p-6 rounded-xl shadow-md mb-8">
        <h4 class="text-xl font-medium text-gray-800 mb-4">Thông tin kế hoạch đăng ký</h4>
        <hr class="border-t border-gray-300 mb-6" />

        <dl class="space-y-6">
            <!-- Tên Kế Hoạch -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-semibold text-gray-800">Tên Kế Hoạch:</dt>
                <dd class="text-gray-700">@Html.DisplayFor(model => model.PlanName)</dd>
            </div>

            <!-- Thời Gian (Tháng) -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-semibold text-gray-800">Thời Gian (Tháng):</dt>
                <dd class="text-gray-700">@Html.DisplayFor(model => model.DurationMonths)</dd>
            </div>

            <!-- Giá (VND) -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-semibold text-gray-800">Giá (VND):</dt>
                <dd class="text-lg text-gray-800">@String.Format("{0:N0} VND", Model.Price)</dd>
            </div>

            <!-- Ngày Tạo -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-semibold text-gray-800">Ngày Tạo:</dt>
                <dd class="text-gray-700">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </div>

            <!-- Ngày Cập Nhật -->
            <div class="flex justify-between items-center">
                <dt class="text-lg font-semibold text-gray-800">Ngày Cập Nhật:</dt>
                <dd class="text-gray-700">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            </div>
        </dl>
    </div>

    <!-- Form Xóa -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="flex justify-between items-center mt-8">
            <!-- Nút Xóa -->
            <input type="submit" value="Xóa" class="px-8 py-3 bg-red-600 text-white rounded-lg shadow-lg hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-500 transition-all duration-300 ease-in-out transform hover:scale-105 cursor-pointer" />

            <!-- Nút Quay lại -->
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "text-lg text-blue-600 font-medium hover:text-blue-800 transition-colors duration-300" })
        </div>
    }
</div>
