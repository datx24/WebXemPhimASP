@model MovieWeb.Models.User_64130299

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-2xl font-bold mb-4 text-center text-gray-800">Chỉnh Sửa Thông Tin Người Dùng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-6 mb-6">
        <h4 class="text-xl font-semibold mb-6 text-center text-gray-800">Thông Tin Chi Tiết Người Dùng</h4>
        <hr class="mb-6" />
        @Html.ValidationSummary(true, "", new { @class = "text-red-500" })
        @Html.HiddenFor(model => model.UserId)

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Email -->
            <div class="mb-5">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "block text-gray-700 text-sm font-medium mb-2" })
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-input mt-1 block w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>

            <!-- Password -->
            <div class="mb-5">
                @Html.LabelFor(model => model.Password, "Mật khẩu", htmlAttributes: new { @class = "block text-gray-700 text-sm font-medium mb-2" })
                <div>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-input mt-1 block w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>

            <!-- Username -->
            <div class="mb-5">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "block text-gray-700 text-sm font-medium mb-2" })
                <div>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-input mt-1 block w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>

            <!-- Updated At -->
            <div class="mb-5">
                @Html.LabelFor(model => model.UpdatedAt, htmlAttributes: new { @class = "block text-gray-700 text-sm font-medium mb-2" })
                <div>
                    @Html.EditorFor(model => model.UpdatedAt, new { htmlAttributes = new { @class = "form-input mt-1 block w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.UpdatedAt, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>
        </div>

        <!-- Submit and Back Button -->
        <div class="flex justify-between items-center mt-6">
            <div>
                <input type="submit" value="Lưu Thay Đổi" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-md shadow-md transform transition-all duration-300 hover:scale-105" />
            </div>

            <div>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-blue-500 hover:underline text-lg font-semibold" })
            </div>
        </div>
    </div>
}
