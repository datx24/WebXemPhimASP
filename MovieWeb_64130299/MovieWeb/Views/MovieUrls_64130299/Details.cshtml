@model MovieWeb.Models.MovieUrls_64130299

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto my-8 p-6 bg-gray-100 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-4">Chi tiết URL Phim</h2>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <h4 class="text-xl text-center font-semibold text-gray-800 mb-4">Thông tin URL Phim</h4>
        <hr class="border-gray-300 mb-4" />

        <dl class="space-y-4 text-center">
            <!-- Centering the dl -->
            <div class="flex justify-center items-center">
                <!-- Centering the items -->
                <dt class="text-lg font-medium text-gray-700">Tiêu đề Phim:</dt>
                <dd class="text-lg text-gray-800 ml-2">@Model.Movie_64130299.Title</dd> <!-- Added margin-left for spacing -->
            </div>
        </dl>

        @if (!string.IsNullOrEmpty(Model.Url))
        {
            <div class="mt-8 flex flex-col items-center">
                <h4 class="text-lg font-medium text-gray-700 mb-2">Xem phim:</h4>
                <div class="w-full max-w-md">
                    <iframe class="w-full h-64 border rounded-lg" src="@Model.Url" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        }
    </div>

    <div class="mt-6 text-center">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MovieUrlId }, new { @class = "text-blue-600 hover:text-blue-800 font-medium text-lg" }) |
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-blue-600 hover:text-blue-800 font-medium text-lg" })
    </div>
</div>