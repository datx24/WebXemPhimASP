@model MovieWeb.Models.MovieUrls_64130299

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-lg p-6 bg-white rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-4">Xóa URL Phim</h2>

        <h3 class="text-lg text-center text-gray-700 mb-4">Bạn có chắc chắn muốn xóa không?</h3>

        <div>
            <h4 class="text-xl font-semibold text-gray-800 mb-4">Thông tin URL Phim</h4>
            <hr class="border-gray-300 mb-4" />

            <dl class="space-y-4">
                <div class="flex justify-between items-center">
                    <dt class="text-lg font-medium text-gray-700">@Html.DisplayNameFor(model => model.Url)</dt>
                    <dd class="text-lg text-gray-800">
                        <a href="@Model.Url" target="_blank" class="text-blue-600 hover:text-blue-700">
                            <i class="fas fa-link"></i> <!-- Font Awesome link icon -->
                        </a>
                    </dd>
                </div>
                <div class="flex justify-between items-center">
                    <dt class="text-lg font-medium text-gray-700">@Html.DisplayNameFor(model => model.Movie_64130299.Title)</dt>
                    <dd class="text-lg text-gray-800">@Html.DisplayFor(model => model.Movie_64130299.Title)</dd>
                </div>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="flex justify-between mt-6">
                    <input type="submit" value="Xóa" class="bg-red-600 text-white hover:bg-red-700 py-2 px-4 rounded-lg transition duration-300 focus:outline-none focus:ring-2 focus:ring-red-500" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-blue-600 hover:text-blue-700 text-lg font-medium" })
                </div>
            }
        </div>
    </div>
</div>