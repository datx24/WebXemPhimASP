@model MovieWeb.Models.MovieUrls_64130299

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-lg p-6 bg-white rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-4">Chỉnh sửa URL Phim</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h4 class="text-xl text-center font-semibold text-gray-800 mb-4">Thông tin URL Phim</h4>
            <hr class="border-gray-300 mb-4" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MovieUrlId)

            <div class="mb-4">
                @Html.LabelFor(model => model.MovieId, "MovieId", htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
                <div class="mt-1">
                    @Html.DropDownList("MovieId", null, htmlAttributes: new { @class = "form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" })
                    @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
                <div class="mt-1">
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-4">
                @Html.LabelFor(model => model.EpisodeNumber, "Số tập phim", htmlAttributes: new { @class = "block text-sm font-medium text-gray-700" })
                <div class="mt-1">
                    @Html.EditorFor(model => model.EpisodeNumber, new { htmlAttributes = new { @class = "form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" } })
                    @Html.ValidationMessageFor(model => model.EpisodeNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="flex justify-between mt-6">
                <div>
                    <input type="submit" value="Lưu" class="bg-blue-600 text-white hover:bg-blue-700 py-2 px-4 rounded-lg transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "text-blue-600 hover:text-blue-700 text-lg font-medium" })
                </div>
            </div>
        }
    </div>
</div>
