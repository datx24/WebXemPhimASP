@model MovieWeb.Models.Movie_64130299

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout641302999.cshtml";
}

<div class="container mx-auto py-8">
    <div class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/3">
            <img src="@Model.PosterUrl" class="rounded-lg w-full" alt="@Model.Title" />
        </div>
        <div class="ml-0 md:ml-8 mt-4 md:mt-0 w-full md:w-2/3">
            <h1 class="text-4xl font-bold text-white">@Model.Title</h1>
            <p class="text-lg text-gray-400 mt-4">@Model.Description</p>
            <p class="text-lg text-gray-200 mt-4">Thể loại: @Model.Genre</p>
            <p class="text-lg text-gray-200 mt-4">Ngày phát hành: @Model.ReleaseDate.ToString()</p>

            <div class="mt-4 space-x-4">
                <a href="@Model.TrailerUrl" target="_blank" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded">
                    Xem Trailer
                </a>
                <a href="@Model.MovieUrl" target="_blank" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
                    Xem Phim
                </a>
            </div>

            <a href="@Url.Action("home64130299", "Home_64130299")" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded mt-4 inline-block">
                Quay lại
            </a>
        </div>
    </div>
</div>
