<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #f4f4f9;
        }

        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            position: fixed;
            height: 100%;
            overflow-y: auto;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

            .sidebar.hidden {
                transform: translateX(-250px);
            }

        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            background-color: #1abc9c;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .logo {
            width: 50px;
            height: 50px;
            margin-right: 27px;
            background-color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #1abc9c;
            font-size: 24px;
        }

            .logo i {
                display: contents;
                font-size: 24px;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%); /* Đảm bảo biểu tượng được căn giữa hoàn toàn */
            }

        .logo-text {
            font-size: 20px;
            font-weight: 600;
            color: #fff;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin-bottom: 20px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            font-size: 16px;
            transition: color 0.3s;
        }

            .sidebar a:hover {
                color: #1abc9c;
            }

        .sidebar i {
            margin-right: 10px;
        }

        .content {
            margin-left: 250px;
            padding: 30px;
            flex: 1;
            background-color: #f8f9fa;
            overflow-y: auto;
            transition: margin-left 0.3s ease;
        }

            .content.hidden {
                margin-left: 0;
            }

        footer {
            text-align: center;
            margin-top: 20px;
            color: #7f8c8d;
        }

        /* Nút icon mũi tên để ẩn/hiển thị sidebar */
        .btn-toggle {
            position: fixed;
            top: 50%;
            left: 233px;
            background-color: #1abc9c;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            transform: translateY(-50%);
            transition: left 0.3s ease;
        }

            .btn-toggle i {
                font-size: 16px;
            }

        .sidebar.hidden ~ .btn-toggle {
            left: 0;
        }

        .btn-toggle i.fa-chevron-left {
            display: inline;
        }

        .sidebar.hidden .btn-toggle i.fa-chevron-left {
            display: none;
        }

        .sidebar.hidden .btn-toggle i.fa-chevron-right {
            display: inline;
        }

        .btn-toggle i.fa-chevron-right {
            display: none;
        }

        /* Nút Thêm, Sửa, Chi tiết, Xóa */
        .btn {
            padding: 10px 20px;
            margin-right: 10px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .btn-add {
            background-color: #27ae60;
            color: white;
        }

        .btn-edit {
            background-color: #f39c12;
            color: white;
        }

        .btn-details {
            background-color: #2980b9;
            color: white;
        }

        .btn-delete {
            background-color: #e74c3c;
            color: white;
        }

        .btn:hover {
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <!-- Sidebar Admin -->
    <div class="sidebar" id="sidebar">
        <div class="logo-container">
            <div class="logo">
                <i class="fas fa-user"></i>
            </div>
            <h2 class="logo-text">Admin</h2>
        </div>
        <ul class="navbar-nav flex-column">
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-users me-2"></i>
                @Html.ActionLink("Quản lý người dùng", "Index", "User_64130299", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-film me-2"></i>
                @Html.ActionLink("Quản lý nội dung phim", "Index", "Movie_64130299", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-film me-2"></i>
                @Html.ActionLink("Quản lý nguồn phim", "Index", "MovieUrls_64130299", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-heart me-2"></i>
                @Html.ActionLink("Quản lý yêu thích", "Index", "Favorite_64130299", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-comment me-2"></i>
                @Html.ActionLink("Quản lý bình luận", "Index", "Comment_64130299", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-star me-2"></i>
                @Html.ActionLink("Quản lý đánh giá", "Index", "Rating_64130299", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item d-flex align-items-center mb-3">
                <i class="fas fa-sign-out-alt me-2"></i>
                @Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
            </li>
        </ul>
    </div>

    <!-- Nút icon mũi tên để ẩn/hiển thị sidebar -->
    <button class="btn-toggle" id="toggleBtn">
        <i class="fas fa-chevron-left"></i>
        <i class="fas fa-chevron-right"></i>
    </button>

    <!-- Main content area -->
    <div class="content" id="mainContent">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Admin Panel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        document.getElementById("toggleBtn").addEventListener("click", function () {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("mainContent");
            sidebar.classList.toggle("hidden");
            mainContent.classList.toggle("hidden");
        });
    </script>
</body>
</html>
