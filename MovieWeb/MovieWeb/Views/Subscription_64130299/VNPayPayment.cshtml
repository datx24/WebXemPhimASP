@{
    ViewBag.Title = "Thanh Toán VNPay";
    Layout = "~/Views/Shared/_Layout641302999.cshtml";
}

<h2>Thanh Toán VNPay</h2>

<p>Chúng tôi đang chuyển bạn đến trang thanh toán VNPay. Vui lòng chờ...</p>

<div>
    <strong>Mã giao dịch:</strong> @Model.SubscriptionId
</div>

<div>
    <strong>Số tiền:</strong> @String.Format("{0:C}", Model.AmountPaid)
</div>

<div>
    <strong>Thông tin đơn hàng:</strong> Thanh toán gói @Model.PlanId cho User @Model.UserId
</div>

<!-- Show loading message or spinner -->
<p>Vui lòng đợi trong khi chúng tôi chuyển bạn đến VNPay...</p>

<!-- Optional: Show a cancel link for the user to return -->
<p>
    <a href="@Url.Action("Home_64130299", "Home_64130299")">Quay lại trang chủ</a>
</p>

<script type="text/javascript">
    // Redirect after a small delay to allow the user to see the information
    setTimeout(function () {
        window.location.href = "@Model.PaymentUrl";
    }, 3000); // Redirect after 3 seconds, adjust as necessary
</script>
